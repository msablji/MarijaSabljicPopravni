    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marij.marijasabljic.MainActivity"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sportasi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sportovi"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="id sportaša"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
